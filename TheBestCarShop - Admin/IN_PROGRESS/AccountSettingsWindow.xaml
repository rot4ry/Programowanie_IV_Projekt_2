<Window x:Class="TheBestCarShop___Admin.AccountSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBestCarShop___Admin"
        mc:Ignorable="d"
        Title="SG-Admin: Account details" 
        Height="627" 
        Width="528.178"
        Background="Gray" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="130*"/>
        </Grid.RowDefinitions>

        <!--COSMETICS-->
        <Rectangle x:Name="topRectangle" 
                   Fill="DimGray" 
                   Stroke="DimGray"/>

        <Label x:Name="topLabel" 
               Content="Account details" 
               HorizontalAlignment="Left" 
               Margin="16,7,0,12" 
               Width="500"
               HorizontalContentAlignment="Left"
               VerticalContentAlignment="Center"
               FontSize="28"
               FontWeight="Light"
               Foreground="Orange" />
        
        <!--INFO SECTION-->
        <GroupBox x:Name="accountDetailsGroupBox"
                  Header="Change your account details" 
                  Height="226" 
                  Margin="30,19,30,0" 
                  Grid.Row="1" 
                  VerticalAlignment="Top">
            
            <Grid Margin="-3,-5,-3,-3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="124*"/>
                    <ColumnDefinition Width="204*"/>
                    <ColumnDefinition Width="107*"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="First name" 
                       Margin="10,10,10,0" 
                       VerticalAlignment="Top" 
                       Height="35"/>
                
                <Label Content="Second name" 
                       Margin="10,50,10,0" 
                       Height="35" 
                       VerticalAlignment="Top"/>
                
                <Label Content="Username" 
                       Margin="13,90,10,0" 
                       Height="35" 
                       VerticalAlignment="Top"/>
                
                <Label Content="Email" 
                       Margin="10,130,10,0" 
                       Height="35" 
                       VerticalAlignment="Top"/>
                
                <Label Content="Phone number" 
                       Margin="10,170,10,0" 
                       Height="35"
                       VerticalAlignment="Top"/>
                
            </Grid>
        </GroupBox>
        
        <!--PASSWORD SECTION-->
        <GroupBox x:Name="passwordGroupBox" 
                  Header="Change your password" 
                  Height="167" 
                  Margin="30,262,30,0" 
                  Grid.Row="1" 
                  VerticalAlignment="Top">
            
            <Grid Margin="-3,-5,-3,-3">
                <Label Content="Old password" 
                       HorizontalAlignment="Left" 
                       Margin="10,20,0,0" 
                       VerticalAlignment="Top" 
                       Height="32" 
                       Width="133"/>
                
                <Label Content="New password" 
                       HorizontalAlignment="Left" 
                       Margin="10,52,0,0" 
                       VerticalAlignment="Top" 
                       Height="32" Width="141"/>
                
                <Label Content="Repeat new password" 
                       HorizontalAlignment="Left" 
                       Margin="10,82,0,0" 
                       VerticalAlignment="Top" 
                       Height="32" Width="141"/>
                
            </Grid>
        </GroupBox>
        
    </Grid>
</Window>
