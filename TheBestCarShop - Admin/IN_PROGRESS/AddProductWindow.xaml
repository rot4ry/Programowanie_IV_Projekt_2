<Window x:Class="TheBestCarShop___Admin.IN_PROGRESS.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBestCarShop___Admin.IN_PROGRESS"
        mc:Ignorable="d"
        Title="SG-Admin: Add Product" 
        Height="549" 
        Width="669"
        Background="Gray" 
        ResizeMode="CanMinimize" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Rectangle x:Name="topRectangle"
                    Grid.Column="1" 
                    Fill="DimGray" 
                    Margin="0,-2,0,0" 
                    Stroke="DimGray" 
                    Height="92" 
                    VerticalAlignment="Top" 
                    Grid.RowSpan="2"/>

        <Label x:Name="topLabel" 
                    Content="Welcome, administrator." 
                    Grid.Column="1" 
                    Margin="20,0,10,0"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    FontSize="28"
                    FontWeight="Light"
                    Foreground="Orange" 
                    Height="82" 
                    VerticalAlignment="Top"/>
        
        
    </Grid>
</Window>
